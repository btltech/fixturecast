# Production Environment Configuration for FixtureCast
# This configuration enables read-only mode for public site

# AWS Configuration (Public Read-Only Access)
VITE_AWS_REGION=us-east-1
VITE_AWS_SCHEDULE_GROUP=fixturecast-schedules

# Read-Only Mode for Public Site
VITE_SCHEDULER_READ_ONLY=true
VITE_AWS_MOCK_MODE=false

# Public Site Credentials (Limited IAM permissions - read-only)
# Replace with your actual read-only AWS credentials
VITE_AWS_ACCESS_KEY_ID=your-public-read-only-access-key
VITE_AWS_SECRET_ACCESS_KEY=your-public-read-only-secret-key
VITE_AWS_SCHEDULER_ROLE_ARN=arn:aws:iam::YOUR-ACCOUNT:role/FixtureCastSchedulerReadOnlyRole

# API Configuration
VITE_API_FOOTBALL_BASE_URL=https://api-football-v1.p.rapidapi.com/v3
VITE_CORS_PROXY_URL=http://localhost:3001

# Site Configuration
VITE_SITE_MODE=public
VITE_ADMIN_ACCESS=false