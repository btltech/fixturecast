# Admin Environment Configuration for FixtureCast
# This configuration enables full admin control

# AWS Configuration (Full Admin Access)
AWS_REGION=us-east-1
AWS_SCHEDULE_GROUP=fixturecast-schedules

# Admin Mode - Full Control
SCHEDULER_READ_ONLY=false
AWS_MOCK_MODE=false
SCHEDULER_ADMIN=true

# Admin Credentials (Full IAM permissions)
# Replace with your actual admin AWS credentials
AWS_ACCESS_KEY_ID=your-admin-access-key
AWS_SECRET_ACCESS_KEY=your-admin-secret-key
AWS_SCHEDULER_ROLE_ARN=arn:aws:iam::YOUR-ACCOUNT:role/FixtureCastSchedulerAdminRole

# CloudWatch and Monitoring
AWS_CLOUDWATCH_LOG_GROUP=/aws/lambda/fixturecast
AWS_CLOUDWATCH_REGION=us-east-1

# Additional Admin Settings
ENABLE_SCHEDULE_CREATION=true
ENABLE_SCHEDULE_DELETION=true
ENABLE_LAMBDA_MANAGEMENT=true
ENABLE_CLOUDWATCH_ACCESS=true