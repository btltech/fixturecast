# Apache .htaccess for canonical URL enforcement
# Redirect apex domain to www (or vice versa based on preference)

# Enable rewrite engine
RewriteEngine On

# Redirect apex to www (preferred)
# Uncomment the following lines if you want to redirect apex to www
# RewriteCond %{HTTP_HOST} ^yourdomain\.com$ [NC]
# RewriteRule ^(.*)$ https://www.yourdomain.com/$1 [R=301,L]

# Redirect www to apex (alternative)
# Uncomment the following lines if you want to redirect www to apex
# RewriteCond %{HTTP_HOST} ^www\.yourdomain\.com$ [NC]
# RewriteRule ^(.*)$ https://yourdomain.com/$1 [R=301,L]

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# SPA fallback - redirect all non-file requests to index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]

# Security headers
<IfModule mod_headers.c>
    Header always set X-Frame-Options "DENY"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Cache control for static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>
